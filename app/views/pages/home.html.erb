<script type="text/javascript">
  $(document).ready(function() {

    $("#brand").change(function() {

      var el = $(this) ;
      // console.log(el);


      <% @car_hash.each do |brand, models| %>
      if(el.val() === '<%= brand %>') {
        $("#model option").remove();
        <% models.each do |model| %>
        $("#model").append(" <option value='<%= model %>'><%= model %></option>");
        <% end %>
      }
      <% end %>

      else if(el.val() === "" ) {
        $("#model option").remove();
      }
    });
  });
</script>
